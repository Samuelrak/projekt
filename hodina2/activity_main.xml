<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gridLayout"
    android:columnCount="3"
    android:rowCount="3"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="00"></Button>

    <Button
        android:id="@+id/button01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="01"></Button>
    <Button
        android:id="@+id/button02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="02"></Button>
    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="10"></Button>
    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="11"></Button>
    <Button
        android:id="@+id/button12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="12"></Button>
    <Button
        android:id="@+id/button20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="20"></Button>
    <Button
        android:id="@+id/button21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="21"></Button>
    <Button
        android:id="@+id/button22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onGridButtonClick"
        android:tag="22"></Button>
</GridLayout>